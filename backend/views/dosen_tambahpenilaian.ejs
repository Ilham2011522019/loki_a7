<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Logo_Unand.svg/1200px-Logo_Unand.svg.png">
    <title>Tambah Penilaian</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-light bg-light shadow-md fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" style="margin-left: 1%;">PORTAL DOSEN</b></a>
          <a class="navbar-brand" style="margin-left: 50%;">UNIVERSITAS ANDALAS</b></a>
        </div>
    </nav>
    <nav>
        <div class="row no-gutters mt-5">
            <div class="col-md-2 bg-light mt-2 pr-3 pt-4">
                <ul class="nav flex-column ml-3 mb-5">
                    <div class="mt-1 mb-2 d-block mx-auto">
                    </div>
                    <h6 class="text-center fs-6"><%= nama %></h6>
                    <h6 class="text-center fs-6">NIP <%= NIP %></h6><hr>
                    <li class="nav-item">
                      <a class="nav-link text-black" href="/semuaMatkul">Mata Kuliah</a><hr>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-black" href="/login">Log Out</a><hr>
                    </li>
              </div>
            <div class="col-md-10 p-4 pt-4" style="background-color: #9fbe8b;">
                <h3>Tambah Penilaian</h3><hr>
                <div class="card shadow mb-4">
                <div class="card-body">
                <div class="container">
                <div class="table shadow mb-4">
                  <form action="/tambahKomponen/<%= id %>/<%= name %>" method="POST">
                    <table class="table table-striped table-bordered table-hover">
                      <thead>
                          <tr>
                              <th scope="col">Nama Komponen</th>
                              <th class="text-center">
                                <select name="name" id=""class="form-select" aria-label="Default select example">
                                  <option value="Tugas Besar">Tugas Besar</option>
                                  <option value="UTS">UTS</option>
                                  <option value="UAS">UAS</option>
                                  <option value="Kuis">Kuis</option>
                                  <option value="Tugas">Tugas</option>
                                  <option value="Kehadiran">Kehadiran</option>
                                </select>
                              </th>
                          </tr>
                          <tr>
                              <th scope="col">Persentase</th>
                              <th class="text-center"><input name="percentage" type="tambahrps" id="inputtambahrps" class="form-control"></th>
                          </tr>
                      </thead> 
                  </table>
                </div>
                  <button type="submit" class="btn mb-3">Simpan</button>
                  <a href="/detailKomponen/<%=id%>/<%=name%>" type="" class="btn mb-3">Kembali</a>
                </div>
                </div>
                </div>
              </form>
            </div>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>