<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Logo_Unand.svg/1200px-Logo_Unand.svg.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <title>CPMK</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-light bg-light shadow-md fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" style="margin-left: 1%;">PORTAL DOSEN</b></a>
        <a class="navbar-brand" style="margin-left: 50%;">UNIVERSITAS ANDALAS</b></a>
      </div>
  </nav>    
  <nav>
        <div class="row no-gutters mt-5">
          <div class="col-md-2 bg-light mt-2 pr-3 pt-4">
            <ul class="nav flex-column ml-3 mb-5">
                <div class="mt-1 mb-2 d-block mx-auto">
                </div>
                <h6 class="text-center fs-6"><%= nama %></h6>
                <h6 class="text-center fs-6">NIP <%= NIP %></h6><hr>
                <li class="nav-item">
                  <a class="nav-link text-black" href="/semuaMatkul">Mata Kuliah</a><hr>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="/login">Log Out</a><hr>
                </li>
        </div>
            <div id="content" class="col-md-10 p-4 pt-4">
                <h3>CPMK <%= name %></h3><hr>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="text-center" scope="col">No.</th>
                            <th class="text-center" scope="col">Capaian Mata Kuliah</th>
                            <th class="text-center" scope="col">Hapus</th>
                            <th class="text-center" scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% CPMK.forEach((C, i) => { %> 
                        <tr>
                            <td class="text-center" scope="row"><%= i+1 %></td>
                            <td><%= C.name %></td>
                            <td class="text-center"><a href="/hapusCPMK/<%= C.id %>/<%= id %>/<%= name %>"  class="btn btn-warning mb-3"><i class="bi bi-trash-fill" data-toggle="tooltip" title="delete" ></i></a></td>
                            <td class="text-center"><a href="/editCPMK/<%= C.id %>/<%= id %>/<%= name %>" class="btn btn-warning mb-3"><i class="fas fa-edit bg-warning text-black rounded" data-toggle="tooltip" title="Edit"></a></i></td>  
                        </tr>
                        <% } ) %>
                    </tbody>
                </table><br>
                <a  href = "/tambahCPMK/<%= id %>/<%= name %>" class="btn btn-warning"><i class="fas fa-plus-square me-2"></i>Tambah CPMK</a>
                <a href="/semuaMatkul" class="btn btn-success" type="button">Kembali</a>
            </div>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>