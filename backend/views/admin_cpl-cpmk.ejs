<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Logo_Unand.svg/1200px-Logo_Unand.svg.png">

  <title>CPL-CPMK</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
</head>
<body>
  <nav class="navbar navbar-expand navbar-dark shadow-md fixed-top" style="background-color: #00AA13;">
    <div class="container-fluid">
      <a class="navbar-brand" style="margin-left: 1%; color: white;">PORTAL ADMIN</b></a>
      <a class="navbar-brand" style="margin-left: 50%; color: white;">UNIVERSITAS ANDALAS</b></a>
    </div>
  </nav>    
  <nav>
    <div class="row no-gutters mt-5">
      <div class="col-md-2 mt-2 pr-3 pt-4" style="background-color: #91ca6b;">
        <ul class="nav flex-column ml-3 mb-5">
          <div class="mt-1 mb-2 d-block mx-auto"></div>
          <h6 class="text-center fs-6"><%= nama %></h6>
          <h6 class="text-center fs-6">NIP <%= NIP %></h6><hr>
          <hr>
          <li class="nav-item">
            <a class="nav-link active text-black" aria-current="page" href="/homeAdmin"><i class="fa-solid fa-list me-2"></i>List RPS</a>
            <hr>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black" href="/persentaseRPS"><i class="fa-solid fa-chart-line me-2"></i>Persentase RPS</a>
            <hr>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black" href="/login"><i class="fa-solid fa-arrow-right-from-bracket me-2"></i>Log Out</a>
            <hr>
          </li>
      </div>
      <div id="content" class="col-md-10 p-4 pt-4" style="background-color: #E9EFC0;">
        <nav>
          <div class="row no-gutters mt-5">
            <div class="col-md-10 p-4 pt-4">
              <h3><i class="fa-solid fa-list me-2"></i>CPL-CPMK</h3><hr>
              <div class="container">
                <div class="row">
                  <div class="col-2"><h6>Tahun Akademik</h6></div>
                  <div class="col-2"><h6>: 2021/2022</h6></div>
                </div>
                <div class="row">
                  <div class="col-2"><h6>Semester</h6></div>
                  <div class="col-3"><h6>: Genap</h6></div>
                </div><br>
              </div>
              <div class="card shadow mb-4">
              <div class="card-body">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th class="text-center" scope="col">No.</th>
                      <th scope="col">Nama Mata Kuliah</th>
                      <th class="text-center" scope="col">Kode Mata Kuliah</th>
                      <th class="text-center" scope="col">Jumlah SKS</th>
                      <th class="text-center" scope="col">Lihat</th>
                    </tr>
                  </thead>  
                  <tbody>
                    <% RPS.forEach((R, i) => { %>
                    <tr>
                      <th class="text-center" scope="row"><%= i+1 %></th>
                        <td><%= R.name %></td>
                        <td class="text-center"><%= R.code %></td>
                        <td class="text-center"><%= R.credit %></td>
                        <td class="text-center"><a href="/CPMKdanCPL/<%= R.id %>/<%= R.name %>"><i class="fa-solid fa-eye bg-warning p-2 text-black rounded" data-toggle="tooltip" title="Open"></i></a></td>
                    </tr>
                    <% } ) %>
                    <tr>
                      <th class="text-center" scope="row">1</th>
                      <td>Pemrograman Web</td>
                      <td class="text-center">JSI62125</td>
                      <td class="text-center">3</td>
                      <td class="text-center"><a href="admin_petacplcpmk.ejs"><i class="fa-solid fa-eye bg-warning p-2 text-black rounded" data-toggle="tooltip" title="Open"></i></a></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div><br>
          </div>
        </nav>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
      </div>
    </div>
  </nav>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>  
</body>
</html>