<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Logo_Unand.svg/1200px-Logo_Unand.svg.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <title>Dashboard Dosen</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-light bg-light shadow-md fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" style="margin-left: 1%; color: black;">PORTAL DOSEN</b></a>
        <a class="navbar-brand" style="margin-left: 50%; color: black;">UNIVERSITAS ANDALAS</b></a>
      </div>
  </nav>    
  <nav>
      <div class="row no-gutters mt-5" >
          <div class="col-md-2 bg-light mt-2 pr-3 pt-4">
            <ul class="nav flex-column ml-3 mb-5">
                <div class="mt-1 mb-2 d-block mx-auto">
                </div>
                <h6 class="text-center fs-6"><%= nama %></h6>
                <h6 class="text-center fs-6">NIP <%= NIP %></h6><hr>
                <li class="nav-item">
                  <a class="nav-link text-black" href="/semuaMatkul">Mata Kuliah</a><hr>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black" href="/login">Log Out</a><hr>
                </li>
          </div>
        <!-- Page Content  -->
        <div class="col-md-10 p-4 pt-4" style="background-color: #9fbe8b;">
          <h3>RPS</h3><hr>
          <div class="card shadow mb-4">
            <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                  <tr>
                      <th class="text-center" scope="col">No.</th>
                      <th class="text-center" scope="col">Nama Mata Kuliah</th>
                      <th class="text-center" scope="col">Kode Mata Kuliah</th>
                      <th class="text-center" scope="col">SKS</th>
                      <th class="text-center" scope="col">Semester</th>
                      <th class="text-center" scope="col">Detail</th>
                      <th class="text-center" scope="col">Revisi</th>
                  </tr>
              </thead>
              <tbody>
                <% RPS.forEach((R, i) => { %>  <!--memanggil data  dan melakukan perulangan-->
                  <tr>
                      <th class="text-center" scope="row"><%= i+1 %></th> <!--apabila i=0 maka perhitungan dimulai dari 1-->
                      <td class="text-center"><%= R.course_plan.name %></td>
                      <td class="text-center"><%= R.course_plan.code %></td> <!--mengambil data dari course plan yg value nya code-->
                      <td class="text-center"><%= R.course_plan.credit %></td> <!--sks-->
                      <td class="text-center"><%= R.course_plan.semester %></td> <!--semester-->
                      <td class="text-center">
                          <div class="dropdown">
                          <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Detail
                          </button>
                          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="/detailCPMK/<%= R.course_plan_id %>/<%= R.course_plan.name %>">CPMK</a></li>
                            <li><a class="dropdown-item" href="/detailRef/<%= R.course_plan_id %>/<%= R.course_plan.name %>">Referensi</a></li>
                            <li><a class="dropdown-item" href="/detailPertemuan/<%= R.course_plan_id %>/<%= R.course_plan.name %>">Jadwal Pertemuan</a></li>
                            <li><a class="dropdown-item" href="/detailKomponen/<%= R.course_plan_id %>/<%= R.course_plan.name %>">Komponen Nilai</a></li>
                          </ul>
                        </div>
                      </td>
                      <td class="text-center"><a href="" class="btn"><i class="fa-solid fa-pen-to-square" data-toggle="tooltip" title="Edit"></i></a></td>
                  </tr>
                <% i++} ) %> <!--increment-->
              </tbody>
            </table><br>
            <a href="/tambahRPS" class="btn">Tambah RPS</a>
            </div>
          </div>
      </div>
      </div>
      </nav>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>