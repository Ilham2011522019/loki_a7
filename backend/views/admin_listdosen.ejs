<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/0/01/Logo_Unand.svg/1200px-Logo_Unand.svg.png">

    <title>Daftar Dosen</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-dark shadow-md fixed-top" style="background-color: #00AA13;">
        <div class="container-fluid">
          <a class="navbar-brand" style="margin-left: 1%; color: white;">PORTAL ADMIN</b></a>
          <a class="navbar-brand" style="margin-left: 50%; color: white;">UNIVERSITAS ANDALAS</b></a>
        </div>
      </nav>
    <nav>
      <div class="row no-gutters mt-5">
        <div class="col-md-2 mt-2 pr-3 pt-4" style="background-color: #91ca6b;">
           <ul class="nav flex-column ml-3 mb-5">
              <div class="mt-1 mb-2 d-block mx-auto"></div>
              <h6 class="text-center fs-6"><%= nama %></h6>
              <h6 class="text-center fs-6">NIP <%= NIP %></h6><hr>
              <li class="nav-item">
                <a class="nav-link active text-black" aria-current="page" href="/homeAdmin">List RPS</a>
                <hr>
              </li>
              <li class="nav-item">
                <a class="nav-link text-black" href="/persentaseRPS">Persentase RPS</a>
                <hr>
              </li> 
              <li class="nav-item">
                <a class="nav-link text-black" href="/login">Log Out</a>
                <hr>
              </li>
        </div>
        <div class="col-md-10 p-4 pt-4" style="background-color: #E9EFC0;">
          <h3>Pilih Hak Akses Dosen</h3><hr>
            <div class="card shadow mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-2"><h6>Nama Mata Kuliah</h6></div>
                  <div class="col-3"><h6>: <%= name %></h6></div>
                </div>
              </div><br>
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th class="text-center" scope="col">No</th>
                    <th class="text-center" scope="col">Nama Dosen</th>
                    <th class="text-center" scope="col">NIP</th>
                    <th class="text-center" scope="col">Telepon</th>
                    <th class="text-center" scope="col">Pilih</th>  
                  </tr>
                </thead>
                <tbody>
                  <% dosen.forEach((D, i) => { %>
                    <tr>
                      <td class="text-center" scope="row"><%= i+1 %></td>
                      <td><%= D.name %></td>
                      <td class="text-center"><%= D.reg_id %></td>
                      <td class="text-center"><%= D.phone %></td>
                      <td class="text-center"><a href="/tambahAksesDosen/<%= D.id %>/<%= id %>/<%= name %>"><i class="fas fa-plus-square btn btn-primary me-2" style="background-color: #00AA13; color: white;"></i></a></td>
                    </tr>
                  <% } ) %>
                </tbody>
              </table><br>
            </div>
            <a href="/AksesDosen/<%=id%>/<%=name%>" class="btn" style="background-color: #00AA13; color: white;">Kembali</a>
          </div>
        </div>
      </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>